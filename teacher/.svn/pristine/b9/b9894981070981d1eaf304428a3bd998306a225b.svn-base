/* pages/myClass/classComponents/classItem/classItem.wxss */
.box{
  width: 670rpx;
  margin: 40rpx auto;
  height: 258rpx;
  box-sizing: border-box;
  background-color: #f2f4f5;
  position: relative;
  border-radius: 18rpx;
  box-shadow: 0px 0px 3px 1px #c4c4c4;
}
.box>view{
  position: absolute;
}
.image{
  width: 200rpx;
  height: 200rpx;
  top: 29rpx;
  left: 14rpx;
}
.image image{
  width: 100%;
  height: 100%;
  border-radius: 25rpx;
}
.title{
  top: 16rpx;
  left: 228rpx;
  font-size: 30rpx;
  font-weight: 550;
  text-indent: 28rpx;
  height: 100rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.time{
  top: 125rpx;
  left: 228rpx;
  font-size: 24rpx;
  color: #666;
}
.btns{
  display: flex;
  width: 422rpx;
  justify-content: space-evenly;
  right: 0;
  bottom: 18rpx;
}
.btn{
  font-size: 26rpx;
  padding: 10rpx 25rpx;
  border-radius: 10rpx;
  color: #fff;
}
.btn1{
  background-color: #3399ff;
}
.btn2{
  background-color: #00cc66;
}
.btn3{
  background-color: #ff9900;
}
