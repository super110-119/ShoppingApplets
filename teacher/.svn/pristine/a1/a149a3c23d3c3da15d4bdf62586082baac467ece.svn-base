/* pages/myClass/classComponents/querys/querys.wxss */
.box{
  width: 692rpx;
  margin: 60rpx auto;
  height: 326rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  position: relative;
  border-radius: 22rpx;
  box-shadow: 15rpx 15rpx 15rpx #666;
}
.box>view{
  position: absolute;
}
.box_img{
  width: 100rpx;
  height: 100rpx;
  top: 20rpx;
  left: 20rpx;
}
.box_img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.box_name{
  top: 20rpx;
  left: 140rpx;
  font-weight: 550;
}
.box_time{
  top: 80rpx;
  left: 140rpx;
  font-size: 26rpx;
  color: #555;
}
.querys{
  left: 5rpx;
  right: 5rpx;
  top: 145rpx;
  text-indent: 2rem;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  }
