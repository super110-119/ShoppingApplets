/**index.wxss**/
page {
  background-color: #F6F6F6;
}

.justify_css {
  display: flex;
  align-items: center;
}

.left_css {
  justify-content: flex-start;
}

.title_css {
  height: 120rpx;
  padding: 0 40rpx;
}

.font1_css {
  color: #666666;
  font-size: 16px;
}

.font2_css {
  color: #FFFFFF;
  font-size: 13px;
  margin: auto;
}

.font3_css {
  font-size: 13px;
  color: #888888;
}

.btn_css {
  background-color: #3F87EE;
  height: 70rpx;
  width: 25%;
  border-radius: 5px;
  box-shadow: 1px 6px 5px 0px #c4c4c4;
}

.course_card {
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}

.course_box {
  /* height: 450rpx; */
  background-color: #FFFFFF;
  border-radius: 5px;
  box-shadow: 0px 0px 3px 1px #c4c4c4;
}

.course_user {
  position: relative;
  margin-right: 20rpx;
}

.course_user_img {
  height: 85rpx;
  width: 85rpx;
  border: 1px solid black;
  border-radius: 50%;
  display: block
}

.course_article {
  font-size: 16px;
  padding: 0 40rpx;
  color: rgba(0, 0, 0, 0.9);
}

.course_img_vox {
  padding: 25rpx 40rpx;
}

.course_img {
  box-shadow: 0px 0px 1px 1px #c4c4c4;
  height: 300rpx;
  width: 100%;
  border-radius: 5px;
}

.icon_flex {
  margin-top: -40rpx;
  padding: 25rpx 40rpx;
  display: flex;
}

.placeholder {
  padding: 0 10px;
  text-align: center;
  height: 2.3em;
  line-height: 2.3em;
  color: #9594A4;
}

.icon {
  margin-right: 15rpx;
}