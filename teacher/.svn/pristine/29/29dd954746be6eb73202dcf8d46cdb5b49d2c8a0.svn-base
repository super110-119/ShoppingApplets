.tag-box {
  /* border: 1px solid black; */
  width: 90rpx;
  margin-left: 140rpx;
  margin-top: -30rpx;
}

.tag-box .before {

}

.tag-box .after {

}

.text-box {
  width: 77%;
  /* height: 20rpx; */
  margin-left: 115rpx;
  padding: 15rpx 10rpx;
  border-radius: 10px;
  line-height: 46rpx;
  position: relative;
  font-size: 14px;
  color: #666666;
  background-color:#f2f4f5;
}

.text-box:after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: -10rpx;
  left: 20rpx;
  transform: rotate(45deg);
  background-color: #f2f4f5;
  border: 1rpx #3F87EE;
  /* border-style: solid none none solid ; */
}

.text-line {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}