/* pages/uploadcourse/uploadcourse.wxss */
page {
  background-color: #f2f4f5;
}

.box{
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #f2f4f5;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  height: 320rpx;
  width: 100%;
}
.user{
  position: absolute;
  top: 64rpx;
  left: 38rpx;
  height: 330rpx;
  width: 580rpx;
}
.list{
  position: absolute;
  top: 440rpx;
  left: 21rpx;
  width: 708rpx;
}

/* 上层蓝色背景块 */
.content{
  position: relative;
  height: 310rpx;
}
.content1{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 270rpx;
  /* background-image: linear-gradient(to bottom, #b4ccfd, #5d82e2); */
  background-color: #3F87EE;
  z-index: 1;
}
.content2{
  position: absolute;
  height: 128rpx;
  width: 100%;
  background-color: #3F87EE;
  /* border-radius: 50%; */
  bottom: 0;
  left: 0;
  right: 0;
}

/* 页面内容 */
.container{
  width: 100%;
  height: 100%;
  position: relative;
  padding: 10rpx 20rpx;
  z-index: 1;
}

.font_name{
  font-size: 17px;
  font-weight: 600;
}

.font_charm {
  text-align: center;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.box{
  width: 105%;
  height: 445rpx;
  margin-left: auto;
  margin-right: auto;
  background-color: #fff;
  color: #A1A1A2;
  font-size: 12px;
  border-radius: 20rpx;
  padding: 30rpx 35rpx;
}

.box2{
  margin-top: 20rpx;
  width: 112%;
  margin-left: auto;
  margin-right: auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 15rpx 15rpx;
}

.box view.name{
  font-size: 28rpx;
  color: #101010;
  font-weight: 700;
}

.inputbox {
  height: 148rpx;
  width: 148rpx;
}

.item {
  text-align: center;
  position: relative;
}

.item .span{
  font-size: 26rpx;
  font-family: Arial;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
  padding-bottom: 10rpx;
  margin-top:24rpx;
}

.item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: auto;
  top: auto;
  bottom: 10rpx;
  right: 0;
  height: 42%;
  width: 1px;
  background-color: #C8C8C8;
}

.name {
  font-size: 28rpx;
  color: #101010;
  font-weight: 700;
}

.img-up {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  background-color: #fa0;
}

.user-id {
  margin-top: 10rpx;
}

.btn-view {
  width: 100%;
  padding: 10rpx 0;
  background-color: #f2f4f5;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
}

button[size='default']{
  width: 90% !important;
}

button[type='primary']{
  background-color: #3F87EE !important;
}

.mp_css {
  height: 20rpx;
}

.border_bottom {
  border-bottom: 2px solid #f2f4f5;
}

.icon {
  margin-right: 32rpx;
  margin-bottom: 5rpx;
}