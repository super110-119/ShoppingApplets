  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    let timer = this.data.message.outTime;
    timer -= 1;
    let miao = 60
    let h,m,s;
    if(timer >= 60){
      h = timer / 60
      h = parseInt(h)
      let thisShi = h >= 10 ? h : '0' + h;
      timer = timer - h * 60
      let thistime = timer >= 10 ? timer : '0' + timer
      this.setData({
        hh: thisShi,
        mm: thistime
      })
    }else{
      let thistime = timer >= 10 ? timer : '0' + timer
      this.setData({
        mm: thistime,
        hh: '00'
      })
    }
    let mytime = setInterval(() => {
      miao -= 1;
      let thisMiao = miao >= 10 ? miao : "0" + miao 
      if(miao <= 0){
        miao = 59;
        let fen = this.data.mm;
        fen -= 1;
        let thisFen = fen >= 10 ? fen : '0' + fen
        this.setData({
          mm: thisFen
        })
        if(fen < 0){
          if(this.data.hh > 0){
            this.setData({
              hh: this.data.hh - 1,
              mm: 59
            })
          }else{
            clearInterval(mytime);
            this.setData({
              hh: '00',
              mm: '00',
              ss: '00'
            })
            wx.showToast({
              title: '时间已经结束',
            })
          }
        }
      }else{
        this.setData({
          ss: thisMiao
        })
      }
    }, 1000)
  },

