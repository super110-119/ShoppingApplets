  radioChange(e){
    let obj = e.detail
    let arr = this.data.userAnswer
    for(let i of arr){
      if(i.index === obj.index){
        i.value = obj.value
        this.setData({
          userAnswer: arr
        })
        return
      }
    }
    arr.push(obj)
    this.setData({
      userAnswer: arr,
      num: arr.length
    })
  },
  btnClick(){
    let n1 = this.data.num;
    let n2 = this.data.message.data.length;
    n1 = parseInt(n1)
    n2 = parseInt(n2)
    if(n1 === n2){
      let demo = this.data.isShow;
      this.setData({
        isShow: !demo
      })
      
    }else{
      let n = n2 - n1;
      wx.showModal({
        title: "您还有" + n + "题没有答完",
        content: "答完才能交卷！！！",
        showCancel: false
      })
    }
  },
  btnsClick(){
