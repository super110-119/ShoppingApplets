// pages/common_pages/login/login.js
let {ajax, httpHead2} = require("../../../network/index")
let {CusBASE64} = require("../../../utils/base64")

let {getUserMes} = require("../../../method/userMsg")

let app = getApp()

let msg = {}

Page({

  /**
   * 页面的初始数据
   */
  data: {
    userId: 0,
    userName: ''
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    let code;
    wx.login({
      success(res){
        code = res.code
      }
    })
    // 1. 获取用户信息
    wx.getUserInfo({
      success(res){
        let data = JSON.stringify(res.userInfo)
        ajax({
          url: httpHead2 + "api/weixinOauthWxapp.action?m=register",
          data: {
            coopCode: 'chengde',
            appCode: 'chengde',
            code,
            userinfoJson: CusBASE64.encoder(data)
          }
        }).then(res => {
          console.log(res);
          msg = res.data.data
        })
      }
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    wx.hideHomeButton()
    this.onLoad()
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },

  /**
   * 自定义方法
   */
  // 用户点击绑定按钮-----
  userClick: function(){
    // ----------------
    let that = this
    let datas = this.data
    // 点击绑定按钮查看是否登录------------
    if(!datas.userId && !datas.userName){
      // 没有全部写入，返回提示--------------
      wx.showToast({
        title: '请输入完整！',
        image: "/assets/img/error/woring.png",
        mask: true
      })
      return
    }

// 返回用户信息对象
let obj = msg.frontUser
obj.username = that.data.userName
obj.userid = that.data.userId

// 进行员工信息绑定
ajax({
  url: httpHead2 + 'api/frontUser.action?m=bindUserByWorkId',
  data: {
    coopCode: 'chengde',
    workId: that.data.userId,
    realName: that.data.userName,
    openid: obj.openid
  }
}).then(res => {
  if(res.data.ret == '-1'){
    wx.showToast({
      title: '工号/姓名有误',
      image: '/assets/img/error/woring.png'
    })
  }else{
    // app.globalData.userMessage = mes
    wx.showToast({
      title: '登录成功',
      mask: true,
      success(){
        getUserMes(app)
        wx.switchTab({
          url: '/pages/home/home'
        })  
      }
    })
  }
})

},
  // 获取用户编号-----
  userId(e){
    let value = e.detail.value
    value = value.trim()
    this.setData({
      userId: value
    })
  },
  // 获取用户姓名---- 
  userName(e){
    let value = e.detail.value
    value = value.trim()
    this.setData({
      userName: value
    })
  }
})