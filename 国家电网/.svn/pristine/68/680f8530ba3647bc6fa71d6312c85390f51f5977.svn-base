/* pages/common_pages/login/login.wxss */
.bg{
  background-image: linear-gradient(#1346C0, #AACFFE);
  width: 100%;
  height: 480rpx;
  position: relative;
}
.img{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 480rpx;
  height: 186rpx;
}
.img image{
  width: 100%;
  height: 100%;
}
.box view[class^="box"]{
  width: 620rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin: 60rpx auto;
}
label{
  display: flex;
}
label text{
  width: 150rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: 550;
}
label text::after{
  content: "|";
  margin: 0 10rpx;
  width: 1rpx;
  color: #BBBBBb;
}
label input{
  margin: 0 20rpx;
}
.demo{
  font-size: 28rpx;
  color: #BBBBBB;
}
.btn{
  background-color: #195ED7 ;
  width: 620rpx;
  height: 90rpx;
  text-align: center;
  box-shadow: 0px 4px 6px 1px rgba(25, 94, 215, 0.4);
  border: 1px solid rgba(255, 0, 0, 0);
  color: #fff;
  margin: 200rpx 0;
  border-radius: 50rpx;
  display: block;
}
