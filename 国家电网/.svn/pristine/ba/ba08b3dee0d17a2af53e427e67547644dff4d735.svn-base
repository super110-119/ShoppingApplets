/* common/itemask/itemask.wxss */

.lists{
  margin: 30rpx;
  box-sizing: border-box;
  height: 200rpx;
}
.titles{
  display: flex;
  align-items: center;
}
.titles>text{
  flex: 1;
  color: #101010;
  margin: 0 12rpx;
}
.items_input{
  width: 200rpx;
  height: 60rpx;
  border: 1rpx solid #ccc;
  box-sizing: border-box;
}
.textarea{
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  overflow: hidden;
}
.textarea textarea{
  height: 120rpx;
  width: 100%;
  border: 1rpx solid #d0d0d0;
  box-sizing: border-box;
}
.max_textarea{
  width: 90%;
  margin-left: 5%;
  padding-bottom: 45rpx;
}
.max_textarea textarea{
  height: 250rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(187, 187, 187, 1);
}
.max_titles{
  margin: 30rpx;
}