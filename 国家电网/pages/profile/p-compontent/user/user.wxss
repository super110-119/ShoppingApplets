/* pages/profile/p-compontent/user/user.wxss */
.container{
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 1;
}
.img{
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 188rpx;
  z-index: 2;
  height: 188rpx;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}
.box{
  position: absolute;
  width: 100%;
  text-align: center;
  height: 250rpx;
  top: 94rpx;
  left: 0;
  background-color: #fff;
  color: #A1A1A2;
  font-size: 12px;
  border-radius: 10rpx;
}
.box view{
  color: #A1A1A2;
  margin-top: 10rpx;
}
.box view.name{
  margin-top: 100rpx;
  font-size: 32rpx;
  color: #101010;
  font-weight: 700;
}
