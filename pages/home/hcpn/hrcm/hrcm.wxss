.recommend-text{
  margin: 50rpx;
  color: #ff5777;
}
.recommend-text::before{
  content: '|';
  margin: 0 10rpx;
}
.recommend-list{
  display: flex;
  justify-content: space-evenly;
  height: 150rpx;
}
.recommend-item{
  padding: 0 24rpx;
  width: 100%;
  height: 100%;
  color: #ff5777;
  font-size: 30rpx;
}
.recommend::after{
  content: "";
  width: 100%;
  height: 40rpx;
  display: block;
  background-color: #ececec;
  margin-top: 80rpx;
}
