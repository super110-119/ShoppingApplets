/* pages/details/dcpn/l-d-shop/l-d-shop.wxss */
.logo{
  display: flex;
  align-items: center;
  font-size: 42rpx;
  font-weight: 600;
  margin: 30rpx;
  color: #ff5777;
}
.logo image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.synopsis{
  display: flex;
}
.synopsis>view{
  flex: 1;
}
.synopsis-view1{
  width: 100%;
  border-right: 3rpx solid #c7c7c7;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-evenly;
}
.is-mes{
  color: #ff5777;
  font-weight: 500;
  font-size: 42rpx;
}
.synopsis-view2 view{
  color: rgb(248, 137, 10);
  margin: 20rpx 30rpx;
}
.synopsis-view2 view.active{
  color: #ff5777;
}
.btn{
  width: 240rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  background-color: #ff5777;
  margin: 30rpx auto;
  border-radius: 30rpx;
}
.desc::before{
  content: '';
  margin: 30rpx 0;
  height: 3rpx;
  display: block;
  background-color: #c7c7c7;
}
.desc{
  text-indent:2em;
  color: #707070;
}
.desc::affter{
  content: '';
  margin: 30rpx 0;
  height: 3rpx;
  display: block;
  background-color: #c7c7c7;
}
