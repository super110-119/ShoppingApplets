/* components/question/question.wxss */
label{
  display: flex;
  margin: 10rpx 20rpx;
}

.question_container{
  margin: 20rpx 30rpx;
}
.question_container::after{
  content: '';
  display: block;
  width: 100%;
  height: 1rpx;
  margin: 20rpx auto;
  background-color: #ddd;
}
.question_titles{
  font-weight: 600;
  display: flex;
  font-size: 30rpx;
}
.question_list{
  font-size: 28rpx;
  color: #323232;
}

.question_textarea_item{
  border: 2rpx solid #aaa;
  display: block;
  margin: 20rpx auto;
  height: 200rpx !important;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.placeholder_class{
  font-size: 24rpx;
  margin: 2rpx 5rpx;
}
